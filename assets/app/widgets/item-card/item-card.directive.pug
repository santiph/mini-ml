a(href='#', ui-sref='item-details({itemId: item.id})')
    .row
        .col-sm-2.col-sm-push-10.clearfix.hidden-xs
            .location Capital Federal
        .col-sm-10.col-sm-pull-2.clearfix
            .hidden-xs
                img.ml-thumbnail.img-responsive.pull-left(ng-src='{{::item.picture.variations.small.url}}')
                .pull-left
                    ml-price(price='item.price')
                    ml-free-shipping(ng-if='item.free_shipping')
                    h2.item-title {{::item.title}}
            .row.hidden-sm.hidden-md.hidden-lg
                .col-xs-4
                    img.ml-thumbnail.img-responsive.pull-left(ng-src='{{::item.picture.variations.small.url}}')
                .col-xs-8
                    .pull-left
                        ml-price(price='item.price')
                        ml-free-shipping(ng-if='item.free_shipping')
                        h2.item-title {{::item.title}}
