doctype html
html(ng-app='mlApp' lang='')
    head
        base(href='/')
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible' content='ie=edge')
        title Mercado Libre
        meta(name='description' content='Mercado Libre, Nunca dejes de buscar')
        meta(name='viewport' content='width=device-width, initial-scale=1')

        link(rel='stylesheet', href='/stylesheets/vendor.css')
        link(rel='stylesheet', href='/stylesheets/styles.css')
        link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
    body
        nav.navbar.navbar-default
            .container
                .row
                    .col-xs-10.col-md-offset-1
                        .navbar-header
                            a.navbar-brand(href='#')
                                img(alt='Mercado Libre', src='images/logo.png', width='47px')
                        form.navbar-form(role='search')
                            .form-group
                                .input-group
                                    input.form-control(name='search',
                                        placeholder="{{ 'header.search-bar.placeholder' | translate }}",
                                        autocomplete='off',
                                        autofocus='autofocus',
                                        type='text')
                                    span.input-group-addon
                                        i.fa.fa-search(aria-hidden='true')
        .container
            div(ui-view='')

    script(src='app/vendor.js')

    // Main app module
    script(src='app/ml-app.module.js')
    script(src='app/ml-app.config.js')

    // Templates
    script(src='app/ml-app.templates.js')

    // ML Core
    script(src='app/core/ml-core.module.js')

    // ML Widgets
    script(src='app/widgets/ml-widgets.module.js')
    script(src='app/widgets/search-results/search-results.directive.js')
    script(src='app/widgets/item-card/item-card.directive.js')
    script(src='app/widgets/price/price.directive.js')
    script(src='app/widgets/breadcrumbs/breadcrumbs.directive.js')
    script(src='app/widgets/free-shipping/free-shipping.directive.js')

    // ML Data
    script(src='app/data/ml-data.module.js')
    script(src='app/data/services/items.factory.js')

    // Features
    //    Homepage
    script(src='app/features/homepage/homepage.module.js')
    script(src='app/features/homepage/homepage.config.js')
    script(src='app/features/homepage/homepage.controller.js')
    //    Item Details
    script(src='app/features/item-details/item-details.module.js')
    script(src='app/features/item-details/item-details.config.js')
    script(src='app/features/item-details/item-details.controller.js')
    //    Search Results
    script(src='app/features/search-results/search-results.module.js')
    script(src='app/features/search-results/search-results.config.js')
    script(src='app/features/search-results/search-results.controller.js')
